{
    "workbench.colorTheme": "Quiet Light",
    "editor.fontFamily": "FiraCode-Retina, FiraCode-Retina, 'FiraCode-Retina', FiraCode-Retina",
    "editor.fontSize": 18,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "wordWrapColumn",
    "editor.fontLigatures": true,
    "terminal.integrated.fontSize": 18,
    "files.autoSave": "afterDelay",
    "files.autoGuessEncoding": true,
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "workbench.list.smoothScrolling": true,
    "explorer.confirmDelete": false,
    "terminal.integrated.fontFamily": "FiraCode-Retina",
    "terminal.integrated.enableVisualBell": true,
    "window.restoreFullscreen": true,
    "extensions.ignoreRecommendations": true,
    "security.workspace.trust.untrustedFiles": "open",
    "accessibility.signals.terminalBell": {
        "sound": "on"
    },
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.default.cppStandard": "c++23",
    "C_Cpp.default.cStandard": "c23",
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true,
    "C_Cpp.inlayHints.parameterNames.enabled": true,
    "C_Cpp.inlayHints.referenceOperator.enabled": true,
    "C_Cpp.inlayHints.referenceOperator.showSpace": true,
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.clang_format_fallbackStyle": "Webkit",
    "C_Cpp.clang_format_style": "Webkit",
    "notebook.defaultFormatter": "ms-vscode.cpptools"
}